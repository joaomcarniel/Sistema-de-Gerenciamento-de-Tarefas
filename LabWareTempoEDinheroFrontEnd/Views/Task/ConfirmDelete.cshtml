@using LabWareTempoEDinheroFrontEnd.Models.DbModels
@model TaskModel
@{
    ViewData["Title"] = "Confirmação de Deleção";
}
<div class="text-center">

    <h3>Realmente deseja apagar esta Tarefa? Id da Tarefa: @Model.IdTask?</h3>

</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="Task" asp-action="Index">Cancelar Exclusão</a>
<a class="btn btn-danger btn-block" role="button" asp-route-id="@Model.IdTask" asp-controller="Task" asp-action="Delete">Confirmar Exclusão</a>