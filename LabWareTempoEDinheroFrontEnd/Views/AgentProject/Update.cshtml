@using LabWareTempoEDinheroFrontEnd.Models.DbModels
@model Agentproject
@{
    ViewData["Title"] = "Editar Agente / Projeto";
}
<div class="text-center">

    <h1 class="display-4">Editar Agente / Projeto</h1>

</div>

<form asp-controller="AgentProject" asp-action="Update" method="post">
    <input type="hidden" asp-for="IdAgentProject" />
    <div class="form-group">
        <label for="IdProject">Id do Projeto</label>
        <input type="text" asp-for="IdProject" class="form-control" placeholder="Digite o id do Projeto" readonly>
        @Html.ValidationMessageFor(x => x.IdProject)
    </div>
    <div class="form-group">
        <label for="IdAgent">Id do Agente</label>
        <input type="text" asp-for="IdAgent" class="form-control" placeholder="Digite o Id do Agente" readonly>
        @Html.ValidationMessageFor(x => x.IdAgent)
    </div>
    <div class="form-group">
        <label for="StartAction">Início do Projeto</label>
        <input type="text" asp-for="StartAction" class="form-control" placeholder="Digite o início do Projeto" readonly>
        @Html.ValidationMessageFor(x => x.StartAction)
    </div>
    <div class="form-group">
        <label for="EndAction">Fim do Projeto</label>
        <input type="text" asp-for="EndAction" class="form-control" placeholder="00/00/00 00:00:00 PM">
        @Html.ValidationMessageFor(x => x.EndAction)
    </div>
    <button type="submit" class="btn btn-primary btn-block">Alterar</button>
    <a class="btn btn-secondary btn-block" asp-controller="AgentProject" asp-action="Index" role="button">Voltar</a>
</form>



