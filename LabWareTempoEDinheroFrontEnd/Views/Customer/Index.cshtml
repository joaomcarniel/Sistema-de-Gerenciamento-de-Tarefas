@using LabWareTempoEDinheroFrontEnd.Models.DbModels
@model List<Customer>
@{
    ViewData["Title"] = "Cadastro de Cliente";
}

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Customer" asp-action="Create">Adicionar Cliente</a>
    </div>
    <br/>

    <h1 class="display-4">Listagem de Clientes</h1>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id Cliente</th>
                <th scope="col">Nome</th>
                <th scope="col">CPF</th>
                <th scope="col">Endereço</th>
                <th scope="col">Telefone</th>
                <th scope="col">Status</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var customer in Model)
                {
                    <tr>
                        <th scope="row">@customer.IdCustomer</th>
                        <td>@customer.NameCustomer</td>
                        <td>@customer.CpfCustomer</td>
                        <td>@customer.AddressCustomer</td>
                        <td>@customer.TelephoneCustomer</td>
                        <td>@customer.StatusCustomer</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@customer.IdCustomer" asp-controller="Customer" asp-action="Update">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@customer.IdCustomer" asp-controller="Customer" asp-action="ConfirmDelete">Deletar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>



