@using LabWareTempoEDinheroFrontEnd.Models.DbModels
@model List<Project>
@{
    ViewData["Title"] = "Cadastro de Projeto";
}

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Project" asp-action="Create">Adicionar Projeto</a>
    </div>
    <br/>

    <h1 class="display-4">Listagem de Projetos</h1>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id Projeto</th>
                <th scope="col">Id Cliente</th>
                <th scope="col">Status do Projeto</th>
                <th scope="col">Nome do Projeto</th>
                <th scope="col">Líder do Projeto</th>
                <th scope="col">Data de Início</th>
                <th scope="col">Data de Término</th>
                <th scope="col">Descrição</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var project in Model)
                {
                    <tr>
                        <th scope="row">@project.IdProject</th>
                        <td>@project.IdCustomer</td>
                        <td>@project.StatusProject</td>
                        <td>@project.NameProject</td>
                        <td>@project.LeaderProject</td>
                        <td>@project.StartDate</td>
                        <td>@project.EndDate</td>
                        <td>@project.DescriptionProject</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@project.IdProject" asp-controller="Project" asp-action="Update">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@project.IdProject" asp-controller="Project" asp-action="ConfirmDelete">Deletar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>



