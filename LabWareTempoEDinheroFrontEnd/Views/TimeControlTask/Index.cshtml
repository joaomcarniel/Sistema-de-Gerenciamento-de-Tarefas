@using LabWareTempoEDinheroFrontEnd.Models.DbModels
@model List<Timecontroltask>
@{
    ViewData["Title"] = "Cadastro de Registro de Tempo";
}

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="TimeControlTask" asp-action="Create">Adicionar Registro de Tempo</a>
    </div>
    <br/>

    <h1 class="display-4">Listagem de Registro de Tempo</h1>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id Tarefa</th>
                <th scope="col">Start Tempo</th>
                <th scope="col">Fim Tempo</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var timeControl in Model)
                {
                    <tr>
                        <th scope="row">@timeControl.IdTask</th>
                        <td>@timeControl.StartTime</td>
                        <td>@timeControl.StopTime</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@timeControl.IdTimeControlTask" asp-controller="TimeControlTask" asp-action="Update">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@timeControl.IdTimeControlTask" asp-controller="TimeControlTask" asp-action="ConfirmDelete">Deletar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>



